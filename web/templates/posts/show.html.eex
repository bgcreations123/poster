<h2>Show post</h2>

<ul>

    <li>
        <strong>Category:</strong>
        <%= @post.categories.name %>
    </li>

    <li>
        <strong>Title:</strong>
        <%= @post.title %>
    </li>

    <li>
        <strong>Description:</strong>
        <%= @post.content %>
    </li>

    <li>
        <strong>Price:</strong>
        <%= Number.Currency.number_to_currency(@post.price) %>
    </li>

</ul>

<%= link "Back", to: posts_path(@conn, :index) %>
<span class="pull-right">
    <%= link "Edit", to: posts_path(@conn, :edit, @post) %>
</span>
